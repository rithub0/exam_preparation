# Django設定
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True

# セッション設定
SESSION_COOKIE_AGE=3600  # 1時間
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_SECURE=True
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# 言語・タイムゾーン設定
LANGUAGE_CODE=ja
TIME_ZONE=Asia/Tokyo
USE_I18N=True
USE_L10N=True
USE_TZ=True

# 開発環境用の設定
DEVELOPMENT=True